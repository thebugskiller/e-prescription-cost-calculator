# Ignore bundler config
/.bundle

# Ignore the database file
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore all log files and temp files
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore uploaded files in development
/storage/*
!/storage/.keep

# Ignore Rails cache and PID files
/tmp/pids/*
/tmp/cache/*
/tmp/sockets/*
!/tmp/pids/.keep
!/tmp/cache/.keep
!/tmp/sockets/.keep

# Ignore .env files for environment variables
.env
.env.*

# Ignore the compiled assets
/public/assets
/public/packs
/public/packs-test
/public/packs/manifest.json

# Ignore coverage reports
/coverage/

# Ignore files generated by the IDE or editor
*.swp
*.swo
.idea/
.vscode/
*.iml

# Ignore macOS system files
.DS_Store

# Ignore byebug history file
.byebug_history

# Ignore system-level files
*.rbc
*.pid
*.seed

# Ignore secrets
config/master.key
config/credentials.yml.enc

# Ignore files from Spring
spring/

# Ignore application-specific files
*.orig
